{{#each data}}
  <div class="growl growl-type-{{this}} growl-position-center mbs growl-active" style="width: 350px;">
    <i class="vicon growl-icon">
    {{#is this 'info'}}
    :
    {{/is}}
    {{#is this 'warning'}}
    :
    {{/is}}
    {{#is this 'error'}}
    :
    {{/is}}
    {{#is this 'success'}}
    v
    {{/is}}
    {{#is this 'notification'}}
    M
    {{/is}}
    {{#is this 'premium'}}
    *
    {{/is}}
    </i>
    <div class="growl-content">
    {{this}} growl
    </div>
  </div>
{{/each}}

