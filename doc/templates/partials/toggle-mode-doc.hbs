<span class="toggle-mode" >

  <span class="mrs">RTL</span>

  <span id="mode" class="flipswitch flipswitch-no bootnode" data-dir-rtl="{{site.assets}}/css/tetra-ui-doc-rtl.css" data-dir-ltr="{{site.assets}}/css/tetra-ui-doc.css">
    <label class="flipswitch-lbl-yes">
      <input type="radio" checked="checked" name="mode"> On
    </label>

    <span class="flipswitch-sliders">
      <span class="flipswitch-outer">
        <span class="flipswitch-inner">
          <span class="flipswitch-btn-no"></span>
          <span class="flipswitch-btn-yes"></span>
        </span>
      </span>
      <span class="flipswitch-slider"></span>
    </span>

    <label class="flipswitch-lbl-no">
      <input type="radio" name="mode"> Off
    </label>
  </span>

</span>
